<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Trips"
        android:textAllCaps="true"
        android:id="@+id/textView_trip_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#5eb9ff"
        android:gravity="center_vertical|center_horizontal"
        android:singleLine="true"
        android:textStyle="bold"
        android:textColor="#000000"
        android:ellipsize="marquee"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:typeface="sans"
        android:layout_marginTop="25dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView_trip_name"
        android:background="#929292"
        android:id="@+id/scrollView2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:text="Destination:"
            android:id="@+id/textView4"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_view_ui"
            android:padding="5dp"
            android:textColor="#000000"
            android:textStyle="normal" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:text="Location"
            android:id="@+id/textView_trip_location"
            android:layout_toRightOf="@+id/textView4"
            android:gravity="center_vertical|center_horizontal"
            android:background="#ffebe8ed"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />


            <TextView
                android:layout_width="120dp"
                android:layout_height="75dp"
                android:text="DateTime:"
                android:id="@+id/textView5"
                android:layout_below="@+id/textView4"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/text_view_ui"
                android:padding="5dp"
                android:textColor="#000000"
                android:textStyle="normal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Date"
            android:id="@+id/textView_trip_date"
            android:gravity="center_vertical|center_horizontal"
            android:layout_below="@+id/textView4"
            android:layout_toRightOf="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:background="#ffebe8ed"
            android:layout_marginTop="5dp"
            android:padding="5dp"/>


        <TextView
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:text="Friends:"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_view_ui"
            android:padding="5dp"
            android:textColor="#000000"
            android:textStyle="normal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="-"
            android:id="@+id/textView_friends"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/textView_trip_date"
            android:gravity="center_vertical|center_horizontal"
            android:layout_toRightOf="@id/textView7"
            android:background="#ffebe8ed"
            android:padding="5dp"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:text="Trip Details:"
            android:id="@+id/textView8"
            android:layout_below="@+id/textView7"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_view_ui"
            android:padding="5dp"
            android:textColor="#000000"
            android:typeface="sans"
            android:textStyle="normal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="-"
            android:id="@+id/textView_notes"
            android:gravity="center_vertical|center_horizontal"
            android:layout_toRightOf="@+id/textView8"
            android:layout_below="@+id/textView_friends"
            android:layout_marginTop="5dp"
            android:background="#ffebe8ed"
            android:padding="5dp"/>

        <Button
            android:layout_width="200sp"
            android:layout_height="60sp"
            android:id="@+id/view_editTrip"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="30sp"
            android:text="Edit this Trip"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:textStyle="normal"
            android:background="#5eb9ff"
            />

    </RelativeLayout>

    </ScrollView>


</RelativeLayout>