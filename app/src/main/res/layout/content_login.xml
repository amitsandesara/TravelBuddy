<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_login"
    tools:context="com.nyu.cs9033.travelbuddy.Controllers.LoginActivity">

    <!--<com.facebook.login.widget.LoginButton-->
        <!--android:id="@+id/fbLogin_button"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_marginTop="0dp"-->
        <!--android:layout_marginBottom="30dp" />-->



    <LinearLayout
        android:id="@+id/pro_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:weightSum="3"
        android:visibility="gone">

        <ImageView
            android:id="@+id/pro_Pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10sp"
            />

        <TextView
            android:id="@+id/pro_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/pro_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:textSize="18dp"
            android:layout_marginBottom="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10sp">

        <Button
            android:layout_width="180sp"
            android:layout_height="50sp"
            android:text="Go to Home"
            android:padding="5sp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/bg"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:visibility="gone"
            android:id="@+id/goToHome" />

    <Button
        android:id="@+id/share_button"
        style="@style/ButtonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="30sp"
        android:background="@drawable/layers_gplus_button_bg"
        android:paddingBottom="10dp"
        android:visibility="gone"
        android:paddingLeft="30dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="Post to Wall" />

        <Button
            android:id="@+id/revokeAccess"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/share_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30sp"
            android:layout_margin="4dp"
            android:layout_marginTop="72dp"
            android:background="@drawable/layers_gplus_button_bg"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:visibility="gone"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="Revoke Access" />

        <Button
            android:id="@+id/sign_out"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginBottom="30sp"
            android:layout_marginTop="0dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:layout_below="@+id/revokeAccess"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="Sign Out"
            android:visibility="gone"
            android:background="@drawable/layers_gplus_button_bg"
            android:textColor="#ffffff" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="130sp"
            android:layout_marginTop="200sp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            />


</LinearLayout>

</LinearLayout>