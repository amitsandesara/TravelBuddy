<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    tools:context=".controllers.CreateTripActivity">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0sp"
    android:background="#a2c3e4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/createTrip"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_marginBottom="15sp"
        android:capitalize="characters"
        android:layout_marginTop="15sp"
        android:textColor="#2e3642"/>

    <EditText
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:hint="Trip Name"
        android:textColorHint="#575757"
        android:singleLine="true"
        android:ems="10"
        android:id="@+id/tripName"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textAlignment="gravity"
        android:layout_marginBottom="10sp"
        android:textColor="@android:color/white"/>

    <EditText
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:hint="Trip Location"
        android:textColorHint="#575757"
        android:singleLine="true"
        android:ems="10"
        android:id="@+id/tripLocation"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textAlignment="gravity"
        android:layout_marginBottom="10sp"
        android:textColor="@android:color/white"/>

    <EditText
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:hint="Date of Trip"
        android:textColorHint="#575757"
        android:ems="10"
        android:id="@+id/tripDate"
        android:gravity="center"
        android:inputType="date"
        android:layout_gravity="center_horizontal"
        android:textAlignment="gravity"
        android:focusable="false"
        android:layout_marginBottom="10sp"
        android:textColor="@android:color/white"/>

    <EditText
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:hint="Time of Trip"
        android:textColorHint="#575757"
        android:ems="10"
        android:id="@+id/tripStartTime"
        android:gravity="center"
        android:inputType="time"
        android:layout_gravity="center_horizontal"
        android:textAlignment="gravity"
        android:focusable="false"
        android:layout_marginBottom="10sp"
        android:textColor="@android:color/white"/>

    <EditText
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:hint="Details of Trip"
        android:textColorHint="#575757"
        android:ems="10"
        android:singleLine="true"
        android:id="@+id/tripDetails"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textAlignment="gravity"
        android:layout_marginBottom="25sp"
        android:textColor="@android:color/white" />

    <!--<Button-->
        <!--android:layout_width="240sp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Add Friends"-->
        <!--android:textColorHint="#575757"-->
        <!--android:ems="10"-->
        <!--android:id="@+id/friends"-->
        <!--android:gravity="center"-->
        <!--android:singleLine="true"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:textAlignment="gravity"-->
        <!--android:layout_marginBottom="10sp"-->
        <!--android:textColor="@android:color/white"/>-->

    <TextView
        android:id="@+id/Friendsnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="10sp"
        android:text="Invited Friends:-" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/addfriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColorHint="#575757"
            android:ems="10"
            android:layout_marginRight="15sp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="gravity"
            android:textColor="@android:color/white"
            android:text="Add Friends" />
    </LinearLayout>
    <Button
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:text="@string/btncreatetrip"
        android:id="@+id/submitCreateTrip"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="15sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:background="#d2dae7" />

</LinearLayout>
</ScrollView>