<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    tools:context=".controllers.CreateTripActivity">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0sp"
    android:background="#a2c3e4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/createTrip"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_marginBottom="30sp"
        android:layout_marginTop="20sp"
        android:textColor="#2e3642"/>

    <!--<EditText-->
        <!--android:layout_width="240sp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:inputType="textCapWords"-->
        <!--android:hint="Your Name"-->
        <!--android:focusable="true"-->
        <!--android:textColorHint="#575757"-->
        <!--android:ems="10"-->
        <!--android:windowSoftInputMode="stateVisible"-->
        <!--android:id="@+id/creatorName"-->
        <!--android:gravity="center"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:textAlignment="gravity"-->
        <!--android:layout_marginBottom="10sp"-->
        <!--android:textColor="@android:color/white"/>-->

    <EditText
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:hint="Trip Location"
        android:textColorHint="#575757"
        android:singleLine="true"
        android:ems="10"
        android:id="@+id/tripLocation"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textAlignment="gravity"
        android:layout_marginBottom="10sp"
        android:textColor="@android:color/white"/>

    <EditText
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:hint="Date of Trip"
        android:textColorHint="#575757"
        android:ems="10"
        android:id="@+id/tripDate"
        android:gravity="center"
        android:inputType="date"
        android:layout_gravity="center_horizontal"
        android:textAlignment="gravity"
        android:focusable="false"
        android:layout_marginBottom="10sp"
        android:textColor="@android:color/white"/>

    <EditText
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:hint="Friends"
        android:textColorHint="#575757"
        android:ems="10"
        android:id="@+id/friends"
        android:gravity="center"
        android:singleLine="true"
        android:layout_gravity="center_horizontal"
        android:textAlignment="gravity"
        android:layout_marginBottom="10sp"
        android:textColor="@android:color/white"/>

    <EditText
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:hint="Details of Trip"
        android:textColorHint="#575757"
        android:ems="10"
        android:singleLine="true"
        android:id="@+id/tripDetails"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textAlignment="gravity"
        android:layout_marginBottom="40sp"
        android:textColor="@android:color/white" />

    <Button
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:text="@string/btncreatetrip"
        android:id="@+id/submitCreateTrip"
        android:layout_marginBottom="0sp"
        android:layout_below="@+id/welcome"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:background="#d2dae7" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_below="@+id/submitCancelTrip" />

</LinearLayout>
</ScrollView>
